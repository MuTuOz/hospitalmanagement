<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cs320.ManagerDashboardController">
   <top>
      <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: #4a90e2; -fx-padding: 15;">
         <children>
            <Label style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;" text="Hospital Management System - Manager Portal" />
            <Region HBox.hgrow="ALWAYS" />
            <Button onAction="#handleLogout" style="-fx-background-color: rgba(255,255,255,0.2); -fx-text-fill: white; -fx-border-color: white; -fx-border-radius: 5; -fx-background-radius: 5;" text="Çıkış" />
         </children>
      </HBox>
   </top>
   <center>
      <VBox alignment="CENTER" spacing="30" style="-fx-padding: 50;">
         <children>
            <Label fx:id="welcomeLabel" style="-fx-font-size: 24px; -fx-text-fill: #333;" text="Manager Dashboard'a Hoş Geldiniz!">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
            <Label style="-fx-font-size: 16px; -fx-text-fill: #666;" text="Buradan departman ve personel yönetimi yapabilirsiniz." />
         </children>
      </VBox>
   </center>
</BorderPane>